<?xml version="1.0" encoding="utf-8"?>

<resource version="0.1" type="normal" id="config_plugin">
    <filetable>
        <file src="settings.xml" type="application/xml" id="settings.xml" compress="off" />
    </filetable>

    <pagetable>
      <page id="FallbackPage">
        <plane style="_common_style_plane_1">
          <layout_hint size="960, 544" />
          <box style="_common_default_style_box">
            <layout_box space="20" layout_type="2" />
            <text label="msg_page_not_found">
              <layout_hint adjust="2, 2"></layout_hint>
            </text>
          </box>
        </plane>
      </page>

      <page id="StartupPage">
        <box style="_common_default_style_box">
          <layout_box space="20" layout_type="2" />
          <button id="download_button" style="_common_default_style_button" label="msg_download">
            <layout_hint size="100, 100"/>
          </button>
          <button id="verify_button" style="_common_default_style_button" label="msg_verify">
            <layout_hint size="100, 100"/>
          </button>
        </box>
      </page>

      <page id="DownloadPage">
        <plane style="_common_style_plane_1">
          <layout_hint size="960, 544" />
          <template_ref id="download_dialog" template="_common_template_dialog_base" />
        </plane>
      </page>

      <page id="VerifyPage">
        <plane style="_common_style_plane_1">
          <layout_hint size="960, 544" />
          <template_ref id="verify_dialog" template="_common_template_dialog_base" />
        </plane>
      </page>
    </pagetable>

    <templatetable>
      <template id="template_downloading_dialog">
        <box style="_common_default_style_dialog_box" id="dialog_box1">
          <layout_box layout_type="1" bottom_margin="20" top_margin="0" id="default" space="20"/>
          <template_ref id="dialog_title" template="_common_template_dialog_title"/>
          <template_ref id="dialog_text" template="_common_template_dialog_text"/>
          <box style="_common_default_style_dialog_box" id="dialog_progressbar_box_1">
              <layout_box layout_type="1" id="default" children_align_x="0"/>
              <text style="_common_style_text_progressbar_label" id="dialog_progressbar1_label1">
                  <layout_hint adjust="2, 2, 0" id="default"/>
              </text>
              <progressbar style="_common_default_style_progressbar" w_label="dialog_progressbar_text" id="dialog_progressbar1" signal_anim="1">
                  <layout_hint size="500, 30, 0, 0"/>
                  <text style="_common_default_style_text" id="dialog_progressbar_text">
                      <layout_hint adjust="2, 2, 0" id="default"/>
                  </text>
              </progressbar>
          </box>

          <box style="_common_default_style_dialog_box" id="dialog_progressbar_box_2">
              <layout_box layout_type="1" id="default" children_align_x="0"/>
              <text style="_common_style_text_progressbar_label" id="dialog_progressbar1_label1">
                  <layout_hint adjust="2, 2, 0" id="default"/>
              </text>
              <progressbar style="_common_default_style_progressbar" w_label="dialog_progressbar_text" id="dialog_progressbar1" signal_anim="1">
                  <layout_hint size="500, 30, 0, 0"/>
                  <text style="_common_default_style_text" id="dialog_progressbar_text">
                      <layout_hint adjust="2, 2, 0" id="default"/>
                  </text>
              </progressbar>
          </box>

          <text style="_common_default_style_text" id="dialog_error_message">
              <layout_hint adjust="2, 2, 0" id="default"/>
          </text>
      </box>
      </template>
    </templatetable>

    <stringtable>
      <locale src="locale/en.xml" compress="on" id="en" />
  </stringtable>
</resource>
